generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  role String @default("pelanggan")
  profile String?
  createdAd DateTime @default(now())
  resetToken String?
  resetTokenExpires DateTime?
}

model Product {
  id Int @id @default(autoincrement())
  name String
  description String
  price Int
  stock Int
  image String
  createdAD DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
}
